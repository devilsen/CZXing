<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.devilsen.czxing.view.ScanView
        android:id="@+id/surface_customize_view_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_customize_scan_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_customize_scan_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_touch_view"
            android:padding="9dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/text_view_customize_scan_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/QRCode"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_customize_scan_album"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_touch_view"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/album"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_customize_my_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="?attr/selectableItemBackground"
        android:text="我的二维码"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text_view_customize_option_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_toys_black_24dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="option_1"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/text_view_customize_option_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_spa_black_24dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="option_2"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/text_view_customize_option_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_whatshot_black_24dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="option_3"
            android:textColor="@color/text_white" />

    </LinearLayout>

</RelativeLayout>